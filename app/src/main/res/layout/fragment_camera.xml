<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/camera_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/frame_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/inner_camera_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <androidx.camera.view.PreviewView
                android:id="@+id/view_finder"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="3:4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:scaleType="fillStart">

            </androidx.camera.view.PreviewView>

            <com.surendramaran.yolov8tflite.OverlayView
                android:id="@+id/overlay"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="3:4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/inferenceTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="32dp"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="100ms" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:id="@+id/count_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <Button
                android:id="@+id/totalCountBtn"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:text="@string/total_count"
                android:background="@drawable/pill_button_background"
                android:layout_marginStart="96dp"
                android:layout_marginVertical="24dp"
                app:layout_anchorGravity="top|start" />

            <GridLayout
                android:id="@+id/counts_grid"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginTop="68dp"
                android:padding="8dp"
                android:columnCount="3"
                android:rowCount="2"
                android:alignmentMode="alignMargins"
                android:useDefaultMargins="true"
                app:layout_anchorGravity="top|start">
                <!-- The GridLayout will be populated with TextViews dynamically -->
            </GridLayout>

            <RelativeLayout
                android:id="@+id/countButtonsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="155dp"
                app:layout_anchor="@id/counts_grid"
                app:layout_anchorGravity="bottom|center_horizontal">
                <Button
                    android:id="@+id/countBtn"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:background="@drawable/round_button_background"
                    android:text=""
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true" />
                <ImageButton
                    android:id="@+id/resetBtn"
                    android:layout_width="54dp"
                    android:layout_height="54dp"
                    android:background="@drawable/red_round_button_background"
                    android:src="@drawable/baseline_delete_24"
                    android:layout_toStartOf="@id/countBtn"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="36dp"
                    android:contentDescription="@string/reset_total_count" />
                <ImageButton
                    android:id="@+id/saveBtn"
                    android:layout_width="54dp"
                    android:layout_height="54dp"
                    android:background="@drawable/round_button_background"
                    android:src="@drawable/baseline_check_24"
                    android:layout_toEndOf="@id/countBtn"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="36dp"
                    android:contentDescription="@string/save_total_count" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/countButtonsBottomLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="85dp"
                app:layout_anchor="@id/counts_grid"
                app:layout_anchorGravity="bottom|center_horizontal">

                <LinearLayout
                    android:id="@+id/buttonSet1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="70dp"
                    android:alpha="0.7"
                    android:background="@drawable/button_adjustment_3"
                    android:layout_marginBottom="10dp">

                    <ImageButton
                        android:id="@+id/button_minus1"
                        android:layout_width="40dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_minus"
                        android:backgroundTint="@color/uranian_blue"
                        android:textColor="@android:color/black" />

                    <ImageButton
                        android:id="@+id/button_plus1"
                        android:layout_width="40dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_plus"
                        android:backgroundTint="@color/uranian_blue"
                        android:textColor="@android:color/black" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/buttonSet2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_centerHorizontal="true"
                    android:alpha="0.7"
                    android:background="@drawable/button_adjustment_1"
                    android:layout_marginBottom="10dp">

                    <ImageButton
                        android:id="@+id/button_minus2"
                        android:layout_width="40dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_minus"
                        android:backgroundTint="@color/cambridge_green"
                        android:textColor="@android:color/black" />

                    <ImageButton
                        android:id="@+id/button_plus2"
                        android:layout_width="40dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_plus"
                        android:backgroundTint="@color/cambridge_green"
                        android:textColor="@android:color/black" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/buttonSet3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginEnd="70dp"
                    android:layout_alignParentEnd="true"
                    android:alpha="0.7"
                    android:background="@drawable/button_adjustment_4"
                    android:layout_marginBottom="10dp">

                    <ImageButton
                        android:id="@+id/button_minus3"
                        android:layout_width="40dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_minus"
                        android:backgroundTint="@color/mustard"
                        android:textColor="@android:color/black" />

                    <ImageButton
                        android:id="@+id/button_plus3"
                        android:layout_width="40dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_plus"
                        android:backgroundTint="@color/mustard"
                        android:textColor="@android:color/black" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/countButtonsBottomLayout_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="85dp"
                app:layout_anchor="@id/counts_grid"
                app:layout_anchorGravity="bottom|center_horizontal">

                <LinearLayout
                    android:id="@+id/buttonSet4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="10dp"
                    android:alpha="0.7"
                    android:background="@drawable/button_adjustment_2"
                    android:layout_marginBottom="10dp">

                    <ImageButton
                        android:id="@+id/button_plus4"
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_plus"
                        android:backgroundTint="@color/lapis_lazuli"
                        android:textColor="@android:color/black" />

                    <ImageButton
                        android:id="@+id/button_minus4"
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_minus"
                        android:backgroundTint="@color/lapis_lazuli"
                        android:textColor="@android:color/black" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/buttonSet54"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginEnd="10dp"
                    android:layout_alignParentEnd="true"
                    android:alpha="0.7"
                    android:background="@drawable/button_adjustment_5"
                    android:layout_marginBottom="10dp">

                    <ImageButton
                        android:id="@+id/button_plus5"
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_plus"
                        android:backgroundTint="@color/old_rose"
                        android:textColor="@android:color/black" />
                    <ImageButton
                        android:id="@+id/button_minus5"
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_minus"
                        android:backgroundTint="@color/old_rose"
                        android:textColor="@android:color/black" />
                </LinearLayout>
            </RelativeLayout>

        </androidx.coordinatorlayout.widget.CoordinatorLayout>

    </FrameLayout >

    <FrameLayout
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:orientation="vertical">

        <com.google.android.material.slider.Slider
            android:id="@+id/zoomSlider"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:rotation="270"
            android:value="1"
            android:valueFrom="1"
            android:valueTo="5" />

    </FrameLayout>

    <include
        android:id="@+id/bottom_sheet_layout"
        layout="@layout/info_bottom_sheet" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>